<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/background"
                tools:context=".Activity.Login.LoginActivity"
                android:orientation="vertical">
    <EditText
        android:id="@+id/etUser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Your ID"
        android:textColorHint="#cd918c8b"
        android:textColor="#edfa7642"
        android:layout_above="@+id/etPass"
        android:layout_alignParentEnd="true" />
    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Your Password"
        android:textColorHint="#cd918c8b"
        android:textColor="#edfa7642"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/btmain"
        android:text="@string/login"
        android:textColor="@color/textColorButton"
        android:textSize="20dp"

        android:layout_marginBottom="33dp"
        android:layout_above="@+id/btnSignUp"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btnSignUp"
        android:background="@drawable/btmain"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/signUp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/textColorButton"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnLogin" />

    <Button
        android:id="@+id/btnLoginFacebook"
        android:layout_width="160dp"
        android:background="#00fafafa"
        android:layout_height="30dp"
        android:text="Sign in with facebook"
        android:textColor="#1784e4"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imViewFind"
        android:src="@drawable/friends_icon"
        android:foregroundGravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find My Friends"
        android:textColor="#e68805"
        android:textStyle="bold"
        android:id="@+id/txtFind"
        android:textSize="30dp"
        android:layout_below="@+id/imViewFind"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
