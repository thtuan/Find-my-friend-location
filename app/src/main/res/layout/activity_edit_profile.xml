<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.thtuan.FindFriendLocation.Activity.Maps.view.ProfileActivity"
              android:orientation="vertical"
              android:background="@android:color/holo_green_light">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/holo_orange_light">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_bright">
                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:src="@drawable/user"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/etProfileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:drawablePadding="8dp"
                        android:layout_margin="8dp"
                        android:padding="4dp"
                        android:background="@drawable/border_item"
                        android:drawableLeft="@drawable/name"
                        android:hint="Name"
                        android:textColor="@android:color/holo_orange_dark"/>
                    <EditText
                        android:id="@+id/etProfilePhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:drawablePadding="8dp"
                        android:layout_margin="8dp"
                        android:padding="4dp"
                        android:background="@drawable/border_item"
                        android:drawableLeft="@drawable/phone"
                        android:hint="Phone"
                        android:textColor="@android:color/holo_orange_dark"/>
                </LinearLayout>

            </LinearLayout>



            <EditText
                android:id="@+id/etSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:layout_margin="4dp"
                android:drawableLeft="@drawable/sex"
                android:textSize="24dp"
                android:padding="4dp"
                android:background="@drawable/border_item"
                android:hint="Sex"
                android:textColor="@android:color/holo_orange_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="24dp"
                    android:hint="Birthday"
                    android:drawableLeft="@drawable/birthday"
                    android:drawablePadding="8dp"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:background="@drawable/border_item"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/holo_orange_dark"/>
            </LinearLayout>
            <EditText
                android:id="@+id/etProfileAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:drawablePadding="8dp"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:background="@drawable/border_item"
                android:drawableLeft="@drawable/address"
                android:hint="Addr"
                android:textColor="@android:color/holo_orange_dark"/>
            <EditText
                android:id="@+id/etProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:drawablePadding="8dp"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:drawableLeft="@drawable/email"
                android:background="@drawable/border_item"
                android:hint="Email"
                android:textColor="@android:color/holo_orange_dark"/>
            <EditText
                android:id="@+id/etProfileDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:drawablePadding="8dp"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:drawableLeft="@drawable/detail"
                android:background="@drawable/border_item"
                android:hint="Detail"
                android:textColor="@android:color/holo_orange_dark"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:drawablePadding="8dp"
                    android:text="Lưu"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:background="@drawable/border_button"/>
                <TextView
                    android:id="@+id/tvRevert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="right"
                    android:drawableLeft="@android:drawable/ic_menu_revert"
                    android:drawablePadding="8dp"
                    android:text="Hủy bỏ"
                    android:src="@android:drawable/ic_menu_revert"
                    android:background="@drawable/border_button"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>
